@model IEnumerable<Protoshop.Models.Product>

@{
    ViewBag.Title = "Produkter";
}

<h2>Produkter</h2>

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<div class="products">
     @{ bool first = true; }
     @foreach (var item in Model)
     {
         if (first)
         {
            <a href="@Url.Action("Details", "Products", new { id = item.ID })" class="firstproduct">
                <img src="@Url.Content("~/Content/Images/blacktshirt.jpg")" alt="T-shirt" />
                <h3>@item.Name</h3>
                <p>@item.Price</p>
                <p>@item.Description</p>
                <p><span class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span>Köp</span></p>
            </a>
            first = false;
         }
         else
         {
            <a href="@Url.Action("Details", "Products", new { id = item.ID })" class="product">
                <img src="@Url.Content("~/Content/Images/blacktshirt.jpg")" alt="T-shirt" />
                <h3>@item.Name</h3>
                <p>@item.Price</p>
                <p>@item.Description</p>
                <p><span class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span>Köp</span></p>
            </a>
        }
     }
    </div>